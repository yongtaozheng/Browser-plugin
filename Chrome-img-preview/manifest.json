{
  "manifest_version": 3,
  "name": "ChromeImgPreview",
  "version": "1.0.0",
  "description": "vue框架快速开发chrome插件",
  "background": {
    "service_worker": "bg.js"
  },
  "icons": {
    "16": "img/logo.jpg",
    "48": "img/logo.jpg",
    "128": "img/logo.jpg"
  },
  "action": {
    "default_title": "ChromeImgPreview",
    "default_icon": "img/logo.jpg",
    "default_popup": "popup/dist/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "bg1.js",
        "contentScript.js"
      ],
      "run_at": "document_end",
      "css": [
        "myStyle.css",
        "panel/dist/css/panel.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel/dist/js/app.a5c14ea4.js",
        "panel/dist/js/chunk-vendors.941508a5.js",
        "combinAllJs.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus"
  ]
}